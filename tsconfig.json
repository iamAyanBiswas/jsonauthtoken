{
  "compilerOptions": {
    "module": "es2015",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "bundler",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    // "checkJs": true,
    "strict": false,
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/*",
    "src/static"
  ],
  "lib": [
    "esnext"
  ]
}