{
  "name": "jsonauthtoken",
  "version": "3.0.4",
  "description": "jsonauthtoken is a JavaScript/TypeScript library to secure authentication.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamAyanBiswas/jsonauthtoken.git"
  },
  "scripts": {
    "build": "tsup && node -e \"require('fs').copyFileSync('types.d.ts', 'dist/types.d.ts')\"",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/node.index.js\""
  },
  "author": "Ayan Biswas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iamAyanBiswas/jsonauthtoken/issues"
  },
  "homepage": "https://github.com/iamAyanBiswas/jsonauthtoken#readme",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsup": "^8.5.1",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist",
    "types.d.ts"
  ],
  "main": "./dist/node.index.js",
  "module": "./dist/web.index.mjs",
  "types": "./dist/types.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "browser": "./dist/web.index.mjs",
      "node": {
        "import": "./dist/node.index.mjs",
        "require": "./dist/node.index.js"
      },
      "default": "./dist/web.index.mjs"
    },
    "./web": {
      "types": "./dist/types.d.ts",
      "import": "./dist/web.index.mjs",
      "require": "./dist/web.index.js",
      "default": "./dist/web.index.mjs"
    },
    "./node": {
      "types": "./dist/types.d.ts",
      "import": "./dist/node.index.mjs",
      "require": "./dist/node.index.js",
      "default": "./dist/node.index.js"
    }
  },
  "keywords": [
    "jat",
    "jwt",
    "jsonauthtoken",
    "jsonwebtoken",
    "auth",
    "authentication"
  ]
}